<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Riwayat Pembelian</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
</head>
<body class="bg-gray-50 text-gray-900">

  <div class="max-w-6xl mx-auto p-4 md:p-6">

    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg shadow-md p-5 mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h1 class="text-2xl font-bold">Riwayat Pembelian</h1>
        <p class="text-blue-100 text-sm">Lihat semua transaksi yang pernah dilakukan</p>
      </div>
      <div class="mt-2 sm:mt-0 text-sm opacity-80">
        Terakhir diperbarui: <%= new Date().toLocaleDateString('id-ID') %>
      </div>
    </div>

    <!-- Container -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">

      <!-- Desktop Table -->
      <div class="overflow-x-auto hidden sm:block">
        <table class="min-w-full text-sm border border-gray-200">
          <thead class="bg-gray-100 text-gray-700">
            <tr>
              <th class="p-3 text-left">Tanggal</th>
              <th class="p-3 text-left">Kode Nota</th>
              <th class="p-3 text-right">Total</th>
              <th class="p-3 text-center">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% riwayat.forEach((r, i) => { %>
              <tr class="<%= i % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> border-t hover:bg-blue-50 transition">
                <td class="p-3"><%= r.tanggal %></td>
                <td class="p-3 font-medium text-gray-800"><%= r.kode %></td>
                <td class="p-3 text-right font-semibold text-green-600">
                  Rp <%= Number(r.total).toLocaleString('id-ID') %>
                </td>
                <td class="p-3 text-center">
                  <a href="/public/nota/<%= r.id %>?sig=<%= r.sig %>"
                     class="inline-block px-4 py-1.5 bg-blue-600 text-white text-sm rounded-lg shadow hover:bg-blue-700 transition-all">
                    ðŸ“œ Lihat Detail
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Mobile Card View -->
      <div class="space-y-4 sm:hidden p-4">
        <% riwayat.forEach(r => { %>
          <div class="bg-white rounded-lg border border-gray-200 p-4 shadow hover:shadow-md transition">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm text-gray-500">ðŸ“… <%= r.tanggal %></span>
              <span class="text-xs font-bold bg-green-100 text-green-700 px-2 py-0.5 rounded">
                Rp<%= Number(r.total).toLocaleString('id-ID') %>
              </span>
            </div>
            <p class="font-semibold text-gray-800 mb-3">ðŸ§¾ Nota: <%= r.kode %></p>
            <a href="/public/nota/<%= r.id %>?sig=<%= r.sig %>"
               class="block w-full text-center bg-blue-600 text-white text-sm py-2 rounded-lg shadow hover:bg-blue-700 transition">
              ðŸ“œ Lihat Detail
            </a>
          </div>
        <% }) %>
      </div>

    </div>
  </div>

</body>
</html>
