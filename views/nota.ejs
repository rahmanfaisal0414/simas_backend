<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Nota <%= nota.kode %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
</head>
<body class="bg-gray-50 text-gray-900">

  <div class="max-w-3xl mx-auto p-4 md:p-6">

    <!-- Header Premium -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg shadow-lg p-4 md:p-6">
      <div class="flex flex-col md:flex-row justify-between md:items-center gap-3">
        <div>
          <h1 class="text-2xl font-bold flex items-center gap-2">Toko Berkah</h1>
          <p class="text-sm text-blue-100">Jl. Soekarno Hatta Ujung No.5</p>
        </div>
        <div class="text-sm md:text-right">
          <p><span class="font-semibold">Kode:</span> <%= nota.kode %></p>
          <p><span class="font-semibold">Tanggal:</span> <%= nota.tanggal %></p>
        </div>
      </div>
    </div>

    <!-- Info Pelanggan -->
    <div class="bg-white rounded-lg shadow p-5 mt-4">
      <h2 class="font-semibold text-lg text-blue-600 mb-2">Pelanggan</h2>
      <p class="text-gray-800 break-words"><%= nota.nama_pelanggan %></p>
      <p class="text-gray-500 text-sm break-words"><%= nota.no_wa %></p>
    </div>

    <!-- Tabel Barang -->
    <div class="bg-white rounded-lg shadow p-4 mt-4 overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-100">
          <tr>
            <th class="p-2 text-left">Barang</th>
            <th class="p-2 text-right">Qty</th>
            <th class="p-2 text-right">Harga</th>
            <th class="p-2 text-right">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% nota.detail.forEach((it, i) => { %>
            <tr class="<%= i % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> border-t hover:bg-blue-50 transition">
              <td class="p-2 break-words"><%= it.nama_barang %></td>
              <td class="p-2 text-right"><%= it.jumlah %></td>
              <td class="p-2 text-right">Rp <%= Number(it.harga_satuan).toLocaleString('id-ID') %></td>
              <td class="p-2 text-right">Rp <%= Number(it.total_harga).toLocaleString('id-ID') %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot class="bg-gray-100">
          <tr>
            <td colspan="3" class="p-2 text-right font-bold">Total</td>
            <td class="p-2 text-right font-bold text-green-600">
              Rp <%= nota.total.toLocaleString('id-ID') %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>

    <!-- Tombol Aksi -->
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <a href="/public/pelanggan/<%= nota.pelanggan_id %>?sig=<%= sig %>"
        class="flex-1 text-center px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
        Lihat Riwayat
      </a>
      <button onclick="window.print()" 
        class="flex-1 px-4 py-2 bg-yellow-400 text-gray-900 font-semibold rounded-lg shadow hover:bg-yellow-500 transition">
        Cetak / Simpan PDF
      </button>
    </div>

  </div>

</body>
</html>
